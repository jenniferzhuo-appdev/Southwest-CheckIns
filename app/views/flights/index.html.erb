<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all flights
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new flight
    </h2>

    <form action="/insert_flight" method="post">
      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="description_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="departure_box">
          Departure
        </label>

        <input type="datetime-local" id="departure_box" name="departure_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="user_id_from_query" class="form-control">
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="fifteen_minute_message_sent_box" name="fifteen_minute_message_sent_from_query" value="1">

        <label class="custom-control-label" for="fifteen_minute_message_sent_box">Fifteen minute message sent</label>
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="minute_message_sent_box" name="minute_message_sent_from_query" value="1">

        <label class="custom-control-label" for="minute_message_sent_box">Minute message sent</label>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create flight
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Departure
        </th>

        <th>
          User
        </th>

        <th>
          Fifteen minute message sent
        </th>

        <th>
          Minute message sent
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @flights.each do |flight| %>
      <tr>
        <td>
          <%= flight.id %>
        </td>

        <td>
          <%= flight.description %>
        </td>

        <td>
          <%= flight.departure %>
        </td>

        <td>
          <%= flight.user_id %>
        </td>

        <td>
          <%= flight.fifteen_minute_message_sent %>
        </td>

        <td>
          <%= flight.minute_message_sent %>
        </td>

        <td>
          <%= time_ago_in_words(flight.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(flight.updated_at) %> ago
        </td>

        <td>
          <a href="/flights/<%= flight.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
